# Colors
CA="\e[34m"  # Accent
CO="\e[32m"  # Ok
CW="\e[33m"  # Warning
CE="\e[31m"  # Error
CN="\e[0m"   # None

# Max width used for components in second column
WIDTH=50

# Choose between Hostname and FQDN for the banner.
# Displaying the fully qualified domain name as banner may get pretty messy.
BANNER="HOSTNAME"

# Services to show
declare -A services
services["nginx"]="nginx"
services["Docker"]="docker"
services["SSH"]="sshd"
services["Fail2Ban"]="fail2ban"
services["UFW"]="ufw"
